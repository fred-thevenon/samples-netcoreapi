{
  "metadata": [
    {
          "src": [
          {
              "src": "../src",
              "files": [ "**.csproj" ],
              "exclude": [ "_site/**", "**/bin/**", "**/obj/**", "**/[Tt]ests/**" ]
          }
          ],
          "dest": "reference",
          "disableGitFeatures": false
       }
    ],
    "build": {
      "content": [
        {
          "files": [            
            "reference/**",
            "**/*.md",
            "**/*.yml"
          ],
          "exclude": [
            "**/obj/**",
            "**/includes/**",
            "_themes/**",
            "_themes.pdf/**",
            "**/docfx.json",
            "_repo.en-us/**",
            "README.md",
            "LICENSE",
            "LICENSE-CODE",
            "ThirdPartyNotices.md"
          ]
        }
      ],
      "resource": [
        {
          "files": [
            "**/*.png",
            "**/*.jpg",
            "**/*.jpeg",
            "**/*.gif",
            "**/*.svg",
            "**/*.ico"
          ],
          "exclude": [
            "**/obj/**",
            "**/includes/**",
            "_themes/**",
            "_themes.pdf/**",
            "**/docfx.json",
            "_repo.en-us/**"
          ]
        }
      ],
      "overwrite": [],
      "externalReference": [],     
      "fileMetadata": {},
      "template": ["docs-templates/cse"],
      "dest": "../artifacts/samples-dotnetcoreapi-docs",
      "globalMetadata": {
        "_appTitle": "Samples netcore api",
        "_appFooter": "<span>Copyright Â© Bikini Software.<br>Generated by <strong>DocFX</strong></span>",
        "_appFaviconPath": "images/logo.png",        
        "_enableSearch": true       
      },
      "markdownEngineName": "markdig",
      "postProcessors": ["ExtractSearchIndex"]
    }
  }